<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sliding_menu_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/sliding_menu_main_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@color/colorPrimary">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center|bottom"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/sliding_menu_ll_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/sliding_menu_tv_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="닉네임"
                                    android:textColor="@color/AppColorWhite"
                                    android:textSize="30sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:text="님"
                                    android:textColor="@color/AppColorWhite"
                                    android:textSize="22sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/AppColorWhite"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/sliding_menu_ll_use_list"
                        style="@style/sliding_menu_layout"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:onClick="onClick"
                        android:orientation="horizontal">

                        <ImageView
                            style="@style/slide_menu_icon"
                            android:background="@drawable/bus_icon" />

                        <TextView
                            style="@style/sliding_menu_text"
                            android:text="이용 내역" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/AppColorLightGray"></LinearLayout>

                    <LinearLayout
                        android:id="@+id/sliding_menu_ll_tourist"
                        style="@style/sliding_menu_layout"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:onClick="onClick"
                        android:orientation="horizontal">

                        <ImageView
                            style="@style/slide_menu_icon"
                            android:background="@drawable/tourist_icon" />

                        <TextView
                            style="@style/sliding_menu_text"
                            android:text="관광지 정보"
                            android:textColor="@color/AppColorBlack" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/sliding_menu_ll_my_point"
                        style="@style/sliding_menu_layout"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:onClick="onClick"
                        android:orientation="horizontal">

                        <ImageView
                            style="@style/slide_menu_icon"
                            android:background="@drawable/my_point_icon" />

                        <TextView
                            style="@style/sliding_menu_text"
                            android:text="나의 포인트"
                            android:textColor="@color/AppColorBlack" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/AppColorLightGray"></LinearLayout>

                    <LinearLayout
                        android:id="@+id/sliding_menu_ll_inqulry"
                        style="@style/sliding_menu_layout"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:onClick="onClick"
                        android:orientation="horizontal">

                        <ImageView
                            style="@style/slide_menu_icon"
                            android:background="@drawable/inquiry_icon" />

                        <TextView
                            style="@style/sliding_menu_text"
                            android:text="문의하기"
                            android:textColor="@color/AppColorBlack" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/sliding_menu_ll_setting"
                        style="@style/sliding_menu_layout"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:onClick="onClick"
                        android:orientation="horizontal">

                        <ImageView
                            style="@style/slide_menu_icon"
                            android:background="@drawable/setting_icon" />

                        <TextView
                            style="@style/sliding_menu_text"
                            android:text="설정"
                            android:textColor="@color/AppColorBlack" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>