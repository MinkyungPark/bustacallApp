<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AppColorLightGrayTwo"
    >

    <include
        layout="@layout/white_titlebar_sliding"></include>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@color/AppColorWhite"
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/my_point_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="12dp"
                android:gravity="center_vertical|right"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/activity_sliding_my_point_tv_point"
                    android:textSize="50sp"
                    android:textColor="@color/AppColorBlack"
                    android:text="20000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:textSize="30sp"
                    android:textColor="@color/AppColorLightGray"
                    android:text="원"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:background="@drawable/sliding_setting_my_point_blue_box"
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <TextView
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:text="환전 하기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">


                <EditText
                    android:id="@+id/activity_sliding_my_point_et_point"
                    android:layout_width="50dp"
                    android:layout_height="30sp"
                    android:layout_marginRight="5dp"
                    android:paddingRight="3dp"
                    android:inputType="number"
                    android:textAlignment="textEnd"
                    android:textSize="22sp"
                    android:textColor="@color/AppColorBlack"
                    android:background="@color/AppColorLightGray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:text=",000 원"
                    android:textColor="@color/colorPrimaryGray"
                    android:textSize="22sp"
                    />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/activity_sliding_my_point_tv_enter"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="환전 신청"
            android:textColor="@color/AppColorWhite"
            android:textSize="30sp" />
    </LinearLayout>
</LinearLayout>