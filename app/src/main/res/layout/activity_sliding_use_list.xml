<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/white_titlebar_sliding"></include>

    <LinearLayout
        android:id="@+id/activity_sliding_use_list_ll_buttonbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/left_buttonbar"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/activity_sliding_use_list_ll_bus"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center"
            android:onClick="onClick"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/activity_sliding_use_list_tv_bus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:clickable="false"
                android:text="버스 예약"
                android:textColor="@color/colorPrimary"
                android:textSize="22sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_sliding_use_list_ll_res"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center"
            android:onClick="onClick"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_sliding_use_list_tv_res"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:clickable="false"
                android:text="합승 예약"
                android:textColor="#ABAAAA"
                android:textSize="22sp" />
        </LinearLayout>
    </LinearLayout>


    <ListView
        android:id="@+id/activity_slding_use_list_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</LinearLayout>