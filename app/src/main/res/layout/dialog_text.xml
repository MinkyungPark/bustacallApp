<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="320dp"
    android:layout_height="240dp"
    android:background="@color/AppColorWhite">

    <EditText
        android:gravity="top"
        android:hint="내용을 작성해주세요"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/rectangle_box"
        android:id="@+id/dialog_et_text"
        android:textColor="@color/AppColorBlack"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="170dp" />

    <TextView
        android:id="@+id/dialog_text_tv_enter"
        android:textColor="@color/AppColorWhite"
        android:background="@color/colorPrimary"
        android:textSize="28sp"
        android:text="확인"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</LinearLayout>