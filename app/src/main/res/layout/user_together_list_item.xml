<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="207dp"
        android:background="@drawable/rectangle_box"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/blue_dayandtime_icon_" />

            <TextView
                android:id="@+id/user_together_list_item_tv_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="2016년 6월 30일"
                android:textColor="@color/AppColorBlack"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/user_together_list_item_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="오전 9시"
                android:textColor="@color/AppColorBlack"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/user_together_list_item_iv_time_right"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/between_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/user_together_list_item_iv_line"
                android:layout_width="20dp"
                android:layout_height="80dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="95dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user_together_list_item_tv_start"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:singleLine="true"
                    android:text="기흥 도서관"
                    android:textColor="@color/AppColorBlack"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/user_together_list_item_tv_end"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:singleLine="true"
                    android:text="부산역"
                    android:textColor="@color/AppColorBlack"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="15dp"
                        android:text="금액"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/user_together_list_item_tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:text="7200000"
                        android:textColor="#FF2222"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="15dp"
                        android:text="원"
                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:gravity="right"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:id="@+id/user_together_list_item_ll_type"
                                android:layout_width="70dp"
                                android:layout_height="60dp"
                                android:background="@drawable/mint_rectangle_box"
                                android:gravity="center"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center">

                                    <ImageView
                                        android:id="@+id/user_together_list_item_iv_sit"
                                        android:layout_width="15dp"
                                        android:layout_height="15dp" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/user_together_list_item_tv_user"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:text="41/45"
                                    android:textColor="@color/AppColorMint"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/user_together_list_item_tv_user_min"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:text="최소 20명"
                                    android:textColor="@color/AppColorMint"
                                    android:textSize="15sp" />
                            </LinearLayout>
                            <LinearLayout
                                android:gravity="right"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:scaleType="fitXY"
                                    android:layout_marginRight="10dp"
                                    android:id="@+id/user_together_list_item_iv_type_right"
                                    android:layout_width="70dp"
                                    android:layout_height="60dp"
                                    android:layout_toLeftOf="@+id/user_together_list_item_ll_type"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/user_together_list_item_iv_type_type"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/AppColorWhite"></LinearLayout>
    </LinearLayout>
</LinearLayout>
