<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="207dp"
        android:background="@drawable/rectangle_box">
        <LinearLayout
            android:layout_marginLeft="25dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:background="@drawable/blue_dayandtime_icon_"
                android:layout_width="25dp"
                android:layout_height="25dp" />

            <TextView
                android:id="@+id/user_list_item_tv_day"
                android:layout_marginLeft="25dp"
                android:textColor="@color/AppColorBlack"
                android:textSize="18sp"
                android:text="1816년 6월 30일"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/user_list_item_tv_time"
                android:layout_marginLeft="10dp"
                android:textColor="@color/AppColorBlack"
                android:textSize="18sp"
                android:text="오전 9시"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:background="@drawable/between_line"
            android:layout_width="match_parent"
            android:layout_height="2dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <ImageView
                android:id="@+id/user_list_item_lv_type_two"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:layout_width="18dp"
                android:layout_height="80dp" />

            <LinearLayout
                android:layout_marginLeft="15dp"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="95dp">

                <TextView
                    android:id="@+id/user_list_item_tv_start"
                    android:textColor="@color/AppColorBlack"
                    android:textSize="20sp"
                    android:text="기흥 도서관"
                    android:lines="1"
                    android:singleLine="true"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginBottom="5dp"
                    android:singleLine="true"
                    android:id="@+id/user_list_item_tv_end"
                    android:textColor="@color/AppColorBlack"
                    android:textSize="20sp"
                    android:gravity="bottom"
                    android:text="부산역"
                    android:layout_width="100dp"
                    android:layout_height="match_parent" />
            </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginLeft="50dp"
                        android:textSize="18dp"
                        android:layout_marginTop="15dp"
                        android:text="금액"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/user_list_item_tv_money"
                            android:textColor="#FF2020"
                            android:layout_marginLeft="10dp"
                            android:textSize="18dp"
                            android:layout_marginTop="15dp"
                            android:text="7180000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginLeft="5dp"
                            android:textSize="18dp"
                            android:layout_marginTop="15dp"
                            android:text="원"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:scaleType="fitXY"
                                android:layout_marginRight="10dp"
                                android:layout_alignParentRight="true"
                                android:onClick="onClick"
                                android:id="@+id/user_list_item_lv_type"
                                android:layout_width="70dp"
                                android:layout_height="60dp" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        <Button
            android:id="@+id/user_list_item_bt_type"
            android:textColor="@color/AppColorWhite"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/AppColorBlack"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
        <LinearLayout
            android:background="@color/AppColorWhite"
            android:layout_width="match_parent"
            android:layout_height="5dp"></LinearLayout>
    </LinearLayout>
</LinearLayout>
